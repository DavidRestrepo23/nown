{%- assign bg_image = section.settings.background_image -%}
{% if section.settings.background_color != blank or bg_image.src != blank %}
  <style>
    #section-policy-{{ section.id }} {
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
      {% if bg_image.src != blank %}
        background-image: url("{{ bg_image | img_url: '1920x' }}");
        background-repeat: no-repeat;
      {% endif %}
    }
  </style>
{% endif %}
<div id="section-policy-{{ section.id }}" class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}{% if section.settings.bd_t == true %} has_bt{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% endif %}
    {% if section.settings.title != blank %}
      <div class="{{ section.settings.title_alignment }}">
        <div class="title_block {{ section.settings.title_style }}">
          <span>{{ section.settings.title }}</span>
          {% if section.settings.sub_title != blank %}
          <span class="sub_title">{{ section.settings.sub_title | escape }}</span>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="nov-policy">
        <div class="row">
          {% for block in section.blocks %}
            <div class="nov-policy-item d-flex align-items-center {{ section.settings.width }} {{ section.settings.width_tablet }} {{ section.settings.width_sm_mobile }} {{ section.settings.width_xs_mobile }}{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}">
              <img class="nv-mr-20 lazyload" data-src="{{ block.settings.policy_icon | img_url: '120x' }}" alt="icon_policy">
              <div>
                <span class="title-policy">{{ block.settings.title_policy }}</span>
                <span class="desc-policy">{{ block.settings.desc_policy }}</span>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
