              {% endif %}
              {% if _product_3 != blank %}
              <div class="item-lookbook" style="{{ block.settings.pin_position_3 }}">
                <span class="number-lookbook"><span>+</span></span>
                <div class="content-lookbook {{ block.settings.pin_content_position_3 }}">
                  <div class="d-xl-block d-flex">
                    <div class="item-thumb mb-15 mb-lg-0">
                      {% assign featured_image = _product_3.selected_or_first_available_variant.featured_image | default: _product_3.featured_image %}
                      <a href="{{ _product_3.url | within: collection }}" alt="{{ _product_3.title }}" >
                        <img class="img-responsive" src="{{ featured_image | img_url: '200x' }}" alt="{{ featured_image.alt | escape }}" />
