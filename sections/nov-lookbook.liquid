              {% if _product_2 != blank %}
              <div class="item-lookbook" style="{{ block.settings.pin_position_2 }}">
                <span class="number-lookbook"><span>+</span></span>
                <div class="content-lookbook {{ block.settings.pin_content_position_2 }}">
