                          <div class="item-title">
                            <a href="{{ _product_4.url | within: collection }}" alt="{{ _product_4.title }}">{{ _product_4.title }}</a>
                          </div>
                          <div class="price">
                            {{ _product_4.selected_or_first_available_variant.price | money }}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        {% else %}
        <div class="nov-lookbook nov-owl-carousel owl-carousel owl-theme slider {{ section.settings.class }}" data-autoplay="{{ section.settings.autoplay }}" data-autoplayTimeout="4000" data-loop="true" data-margin="{{ section.settings.spacing }}" data-dots="{{ section.settings.show_dots }}" data-nav="{{ section.settings.show_nav }}" data-items="{{ section.settings.show_number }}" data-items_tablet="{{ section.settings.items_tablet }}" data-items_mobile="{{ section.settings.items_mobile }}" data-center="false" data-start="0">
        {% for block in section.blocks %}
          <div class="item">
            <div class="nov-content-lookbook">
              <img class="w-100" src="{{ block.settings.lookbook_image | img_url: '1920x' }}" alt="{{ block.settings.lookbook_title }}"/>
