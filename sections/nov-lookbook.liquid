             {"value": "topright", "label": "Top Right"},
             {"value": "bottomleft", "label": "Bottom Left"},
             {"value": "bottomright", "label": "Bottom Right"}
            ],
            "default": "bottomleft"
          },
          {
            "type": "product",
            "id": "pin_product_2",
            "label": "Select Pin Product 2"
          },
          {
            "type":  "header",
            "content": "Pin 3"
          },
          {
            "type": "text",
            "id": "pin_position_3",
            "label": "Pin position 3",
            "info": "Example: Top: 50%; Left: 20%",
            "default": "Top: 50%; Left: 20%"
          },
          {
            "type": "select",
            "id": "pin_content_position_3",
            "label": "Content position",
            "options": [
             {"value": "topleft", "label": "Top Left"},
             {"value": "topright", "label": "Top Right"},
             {"value": "bottomleft", "label": "Bottom Left"},
             {"value": "bottomright", "label": "Bottom Right"}
            ],
            "default": "bottomleft"
          },
          {
            "type": "product",
            "id": "pin_product_3",
            "label": "Select Pin Product 3"
          },
          {
            "type":  "header",
            "content": "Pin 4"
          },
          {
            "type": "text",
            "id": "pin_position_4",
            "label": "Pin position 4",
            "info": "Example: Top: 50%; Left: 20%",
            "default": "Top: 50%; Left: 20%"
          },
          {
            "type": "select",
            "id": "pin_content_position_4",
            "label": "Content position",
            "options": [
             {"value": "topleft", "label": "Top Left"},
             {"value": "topright", "label": "Top Right"},
             {"value": "bottomleft", "label": "Bottom Left"},
             {"value": "bottomright", "label": "Bottom Right"}
            ],
            "default": "bottomleft"
          },
          {
            "type": "product",
            "id": "pin_product_4",
            "label": "Select Pin Product 4"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Lookbook",
        "category": "Image",
        "blocks": [
          {
            "type": "lookbook"
          },
          {
            "type": "lookbook"
          }
        ]
      }
    ]
  }
