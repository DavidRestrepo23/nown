<div class="page-width distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-owl">
  <div class="block">
    {% if section.settings.has_fullwidth == false %}
    <div class="container">
    {% endif %}
      {% if section.settings.title != blank %}
      <div class="{{ section.settings.title_alignment }}">
        <div class="title_block {{ section.settings.title_style }}{% if section.settings.has_fullwidth == true and section.settings.title_alignment == 'text-left' %} nv-pl-30 nv-pl-md-10{% endif %}{% if section.settings.has_fullwidth == true and section.settings.title_alignment == 'text-right' %} nv-pr-30 nv-pr-md-10{% endif %}">
          <span>{{ section.settings.title | escape }}</span>
          {% if section.settings.subheading != blank %}
            <span class="sub_title">{{ section.settings.subheading | escape }}</span>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {% case section.blocks.size %}
        {% when 1 %}
          {%- assign column_size = 'col-lg-12 col-md-12 col-xs-12' -%}
        {% when 2 %}
          {%- assign column_size = 'col-lg-6 col-md-6 col-xs-12' -%}
        {% when 3 %}
          {%- assign column_size = 'col-lg-4 col-md-4 col-xs-12' -%}
        {% when 4 %}
          {%- assign column_size = 'col-lg-3 col-md-4 col-xs-12' -%}
        {% when 5 %}
          {%- assign column_size = 'col-lg-cus-5 col-md-cus-5 col-xs-12' -%}
        {% else %}
          {%- assign column_size = 'col-lg-2 col-md-4 col-xs-6' -%}
      {% endcase %}
      {% if section.blocks.size > 0 %}
        {% if section.settings.view_type == 'type_grid' %}
        <div class="nov-lookbook default{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
          <div class="row spacing-{{ section.settings.spacing }}{% if section.settings.has_fullwidth == true %} m-0{% endif %}">
            {% for block in section.blocks %}
              <div class="item {{ column_size }} text-center{% if forloop.last == false %} mb-30{% endif %}{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}">
                <div class="nov-content-lookbook">
                  <img class="w-100" src="{{ block.settings.lookbook_image | img_url: '1920x' }}" alt="{{ block.settings.lookbook_title }}"/>
                  {% assign _product_1 = all_products[block.settings.pin_product_1] %}
                  {% assign _product_2 = all_products[block.settings.pin_product_2] %}
                  {% assign _product_3 = all_products[block.settings.pin_product_3] %}
                  {% assign _product_4 = all_products[block.settings.pin_product_4] %}
                  {% if _product_1 != blank %}
                  <div class="item-lookbook" style="{{ block.settings.pin_position_1 }}">
                    <span class="number-lookbook"><span>+</span></span>
                    <div class="content-lookbook {{ block.settings.pin_content_position_1 }}">
                      <div class="d-xl-block d-flex">
                        <div class="item-thumb mb-15 mb-lg-0">
                          {% assign featured_image = _product_1.selected_or_first_available_variant.featured_image | default: _product_1.featured_image %}
                          <a href="{{ _product_1.url | within: collection }}" alt="{{ _product_1.title }}" >
                            <img class="img-responsive" src="{{ featured_image | img_url: '200x' }}" alt="{{ featured_image.alt | escape }}" />
                          </a>
                        </div>
                        <div class="content-lookbook-bottom">
                          <div class="item-title">
                            <a href="{{ _product_1.url | within: collection }}" alt="{{ _product_1.title }}">{{ _product_1.title }}</a>
                          </div>
                          <div class="price">
                            {{ _product_1.selected_or_first_available_variant.price | money }}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  {% endif %}
                  {% if _product_2 != blank %}
