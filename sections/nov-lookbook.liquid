                    </div>
                    <div class="content-lookbook-bottom">
                      <div class="item-title">
                        <a href="{{ _product_1.url | within: collection }}" alt="{{ _product_1.title }}">{{ _product_1.title }}</a>
                      </div>
                      <div class="price">
                        {{ _product_1.selected_or_first_available_variant.price | money }}
                      </div>
                    </div>
                  </div>
                </div>
                <div class="info-lookbooks">
                  {% if block.settings.lookbook_title_1 != blank %}
                  <h2 class="title-lookbook">{{ block.settings.lookbook_title_1 }}</h2>
                  {% endif %}
                  {% if block.settings.lookbook_desc_1 != blank %}
                  <div class="description-lookbook">{{ block.settings.lookbook_desc_1 }}</div>
