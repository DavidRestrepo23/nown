<div class="page-width distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% else %}
  <div class="container-fluid">
  {% endif %}

    {% if section.settings.title != blank %}
      <div class="{{ section.settings.title_alignment }}">
        <div class="title_block {{ section.settings.title_style }}">
          <span>{{ section.settings.title }}</span>
          {% if section.settings.subheading != blank %}
            <span class="sub_title">{{ section.settings.subheading | escape }}</span>
          {% endif %}
        </div>
      </div>
    {% endif %}

    <div class="row nov-slick-carousel"
      data-autoplay="false" 
      data-autoplayTimeout="6000" 
      data-loop="false"
      data-dots="false"
      data-nav="false" 
      data-row="1"
      data-items_xl="{{ section.settings.grid_number_xl }}"
      data-items="{{ section.settings.grid_number }}" 
      data-items_lg_tablet="{{ section.settings.grid_number_lg_tablet }}" 
      data-items_tablet="{{ section.settings.items_tablet }}" 
      data-items_mobile="{{ section.settings.items_mobile }}"
      data-items_mobile_xs="{{ section.settings.items_mobile_xs }}">
      {% for block in section.blocks %}
        <div class="col">
          <div class="block_content">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="d-flex align-items-center">
          {% endif %}
          {% if block.settings.image != blank %}
            <span class="b_img nv-mr-15"><img src="{{ block.settings.image | img_url: '100x'}}"></span>
          {% endif %}
          {% if block.settings.text != blank %}
            <span class="name_link d-block">{{ block.settings.text }}</span>
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}

  </div>

</div>

{% schema %}
  {
    "name": "Vinova Link List",
    "class": "index-section section-link-list",
    "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Vinova link list"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "Subtitle from happy customers"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Title alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "title_style",
        "label": "Heading Style",
        "default": "title_1",
        "options": [
          {
            "value": "title_1",
            "label": "Style 1"
          },
          {
            "value": "title_2",
            "label": "Style 2"
          },
          {
            "value": "title_3",
            "label": "Style 3"
          }
        ]
      },
      {
        "type": "range",
        "id": "grid_number_xl",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row extra desktop",
        "default": 8
      },
      {
        "type": "range",
        "id": "grid_number",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row large",
        "default": 8
      },
      {
        "type": "range",
        "id": "grid_number_lg_tablet",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row (Desktop)",
        "default": 6
      },
      {
        "type": "range",
        "id": "items_tablet",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Items Tablet",
        "default": 3
      },
      {
        "type": "range",
        "id": "items_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items Mobile",
        "default": 2
      },
      {
        "type": "range",
        "id": "items_mobile_xs",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items Small Mobile",
        "default": 1
      },
      {
        "type":  "header",
        "content": "Design Option"
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default":   false
      },
      {
        "type": "color",
        "id": "color_link",
        "label": "Link Text Colors",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "background_i",
        "label": "Background Item",
        "default": "#f3f3f3"
      },
      {
        "type": "color",
        "id": "background_i_h",
        "label": "Background Item Hover",
        "default": "#f3f3f3"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Colors",
        "default": "#ffffff"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "featured_collection",
        "name": "Link",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Name Link"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Link List",
        "category": "Collection",
        "blocks": [
          {
            "type": "featured_collection"
          },
          {
            "type": "featured_collection"
          },
          {
            "type": "featured_collection"
          }
        ]
      }
    ]
  }
{% endschema %}
<style>
  {%- assign bg_image = section.settings.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
    {% if section.settings.background_color != blank or bg_image.src != blank %}
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
      {% if bg_image.src != blank %}
        background-image: url("{{ bg_image | img_url: '1920x' }}");
        background-repeat: no-repeat;
        background-position: center top;
      {% endif %}
    {% endif %}
  }
  #shopify-section-{{ section.id }} .block_content {
    background: {{ section.settings.background_i }};
  }
  #shopify-section-{{ section.id }} .block_content:hover {
    background: {{ section.settings.background_i_h }};
  }
  #shopify-section-{{ section.id }} .name_link {
    color: {{ section.settings.color_link }};
  }
</style>
