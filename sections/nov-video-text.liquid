<div class="distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% endif %}

  {% if section.settings.title != blank %}
  <div class="{{ section.settings.title_alignment }} position-relative">
    <div class="title_block {{ section.settings.title_style }} mb-20{% if section.settings.has_fullwidth == true and section.settings.title_alignment == 'text-left' %} nv-pl-30 nv-pl-md-10{% endif %}{% if section.settings.has_fullwidth == true and section.settings.title_alignment == 'text-right' %} nv-pr-30 nv-pr-md-10{% endif %}">
      <span>{{ section.settings.title }}</span>
      {% if section.settings.subheading != blank %}
      <span class="sub_title">{{ section.settings.subheading | escape }}</span>
      {% endif %}
    </div>
  </div>
  {% endif %}

  <div class="row spacing-{{ section.settings.spacing }}">
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="block_text {{ block.settings.text-alignment }} {{ block.settings.width_text }} {{ block.settings.width_text_tablet }} {{ block.settings.width_text_mobile }}{% if block.settings.class_text != blank %} {{ block.settings.class_text }}{% endif %}">
          <div class="block_content nv-pl-30 nv-pr-30">
            {% if block.settings.image != blank %}
            <img class="mb-20" src="{{ block.settings.image | img_url: '120x' }}" alt="image">
            {% endif %}
            {% if block.settings.title != blank %}
            <div class="title mb-25">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.subtitle != blank %}
            <div class="sub_title mb-40 mb-md-30">{{ block.settings.subtitle }}</div>
            {% endif %}
            {% if block.settings.show_social == true %}
              {% include 'nov-social' %}
            {% endif %}
          </div>
        </div>
      {% endif %}
      {% if block.type == 'video' %}
        <div class="block_video {{ block.settings.width_image }} {{ block.settings.width_image_tablet }} {{ block.settings.width_image_mobile }}{% if block.settings.class_image != blank %} {{ block.settings.class_image }}{% endif %}">
          <div class="block_content">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="{% if block.settings.video_url.type == "youtube"  %}https://www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0&vq=4000{% endif %}{% if block.settings.video_url.type == "vimeo" %}//player.vimeo.com/video/{{ block.settings.video_url.id }}?byline=0&portrait=0&badge=0{% endif %}" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
